<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bAdvancedGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bSimpleGame"
        android:layout_centerHorizontal="true"
        android:text="@string/advanced_game" />

    <ImageButton
        android:id="@+id/bClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="62dp"
        android:background="@null"
        android:contentDescription="@string/clock_button"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/bSimpleGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bAdvancedGame"
        android:layout_alignRight="@+id/bAdvancedGame"
        android:layout_below="@+id/bClock"
        android:layout_marginTop="62dp"
        android:text="@string/simple_game" />

</RelativeLayout>